<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Animations" />

	<!-- PopDownMenu -->
	<style name="Animations.PopDownMenu" />
	
	<style name="Animations.PopDownMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/view_grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/view_shrink_from_bottom</item>
	</style>
	
	<style name="Animations.PopDownMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/view_grow_from_t_l_to_b_r</item>
		<item name="@android:windowExitAnimation">@anim/view_shrink_from_b_r_to_t_l</item>
	</style>
	
	<style name="Animations.PopDownMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/view_grow_from_t_r_to_b_l</item>
		<item name="@android:windowExitAnimation">@anim/view_shrink_from_b_l_to_t_r</item>
	</style>
	
	<style name="Animations.PopDownMenu.Reflect">
		<item name="@android:windowEnterAnimation">@anim/view_pump_top</item>
		<item name="@android:windowExitAnimation">@anim/view_pop_disappear</item>
	</style>
	
	<!-- PopUpMenu -->
	<style name="Animations.PopUpMenu" />
	
	<style name="Animations.PopUpMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/view_grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/view_shrink_from_top</item>
	</style>
	
	<style name="Animations.PopUpMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/view_grow_from_b_l_to_t_r</item>
		<item name="@android:windowExitAnimation">@anim/view_shrink_from_t_r_to_b_l</item>
	</style>
	
	<style name="Animations.PopUpMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/view_grow_from_b_r_to_t_l</item>
		<item name="@android:windowExitAnimation">@anim/view_shrink_from_t_l_to_b_r</item>
	</style>
	
	<style name="Animations.PopUpMenu.Reflect">
		<item name="@android:windowEnterAnimation">@anim/view_pump_bottom</item>
		<item name="@android:windowExitAnimation">@anim/view_pop_disappear</item>
	</style>
</resources>